<Window x:Class="Shashki.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shashki"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1400" ResizeMode="CanMinimize" Background="#FF093B78">
    <Window.Resources>
        <Style x:Key="BorderTriggers" TargetType="Border">
            <Style.Triggers>
                <!--<MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsEnabled" Value="True"/>
                        <Condition Property="HorizontalAlignment" Value="Left"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Margin" Value="12, 12, 0, 12"/>
                </MultiTrigger>-->
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Margin" Value="12"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Margin" Value="25"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid  x:Name="playGround" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="8" Grid.RowSpan="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>
        <!--#region Coords letters-->
        <Border Grid.Row="0" Grid.Column="1">
            <Label Content="A" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="2">
            <Label Content="B" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="3">
            <Label Content="C" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="4">
            <Label Content="D" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="5">
            <Label Content="E" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="6">
            <Label Content="F" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="7">
            <Label Content="G" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="8">
            <Label Content="H" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="0">
            <Label Content="1" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="0">
            <Label Content="2" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="3" Grid.Column="0">
            <Label Content="3" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="4" Grid.Column="0">
            <Label Content="4" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="5" Grid.Column="0">
            <Label Content="5" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="6" Grid.Column="0">
            <Label Content="6" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="7" Grid.Column="0">
            <Label Content="7" Style="{StaticResource letter}"/>
        </Border>
        <Border Grid.Row="8" Grid.Column="0">
            <Label Content="8" Style="{StaticResource letter}"/>
        </Border>
        <!--#endregion -->
        
        <!--#region UIPanel-->
        <Grid Grid.Column="9" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="10">
            <StackPanel Orientation="Vertical">
                <Border Margin="30" Height="100" Background="DodgerBlue" BorderBrush="White" BorderThickness="2" CornerRadius="20">
                    <Grid>
                        <Border CornerRadius="18" Style="{StaticResource BorderTriggers}" IsEnabled="True" HorizontalAlignment="Left" Width="409">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.499, 0.49" EndPoint="0.5, 0.5" SpreadMethod="Pad">
                                    <LinearGradientBrush.GradientStops>
                                        <GradientStop Color="White" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                    </LinearGradientBrush.GradientStops>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border CornerRadius="18" Style="{StaticResource BorderTriggers}" IsEnabled="True" HorizontalAlignment="Right" Width="409">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.499, 0.49" EndPoint="0.5, 0.5" SpreadMethod="Pad">
                                    <LinearGradientBrush.GradientStops>
                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                        <GradientStop Color="Black" Offset="0.5"/>
                                    </LinearGradientBrush.GradientStops>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>

                </Border>
            </StackPanel>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
